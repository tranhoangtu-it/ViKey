// Tray Context Menu
IDM_TRAY_MENU MENU
BEGIN
    POPUP "TrayMenu"
    BEGIN
        MENUITEM "Tiếng Việt (VN)", IDM_TOGGLE_ENABLED, CHECKED
        MENUITEM SEPARATOR
        MENUITEM "Telex", IDM_METHOD_TELEX, CHECKED
        MENUITEM "VNI", IDM_METHOD_VNI
        MENUITEM SEPARATOR
        POPUP "Mã xuất"
        BEGIN
            MENUITEM "Unicode", IDM_ENC_UNICODE, CHECKED
            MENUITEM "VNI Windows", IDM_ENC_VNI
            MENUITEM "TCVN3 (ABC)", IDM_ENC_TCVN3
        END
        MENUITEM SEPARATOR
        MENUITEM "Cài đặt...", IDM_SETTINGS
        MENUITEM "Gõ tắt...", IDM_SHORTCUTS
        MENUITEM "Loại trừ ứng dụng...", IDM_EXCLUDE_APPS
        MENUITEM "Chuyển mã...", IDM_CONVERTER
        MENUITEM "Xuất cài đặt...", IDM_EXPORT_SETTINGS
        MENUITEM "Nhập cài đặt...", IDM_IMPORT_SETTINGS
        MENUITEM SEPARATOR
        MENUITEM "Giới thiệu", IDM_ABOUT
        MENUITEM SEPARATOR
        MENUITEM "Thoát", IDM_EXIT
    END
END

// =============================================================================
// Settings Dialog - EVKey style with dark mode support
// =============================================================================
IDD_SETTINGS DIALOGEX 0, 0, 300, 175
EXSTYLE WS_EX_APPWINDOW
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "ViKey x64 - 1.3.3 - Nhẹ, nhanh, chuẩn Việt"
FONT 8, "MS Shell Dlg", 400, 0, 0x1
BEGIN
    // Top section - Điều khiển
    GROUPBOX "Điều khiển", -1, 4, 2, 235, 48
    LTEXT "Kiểu gõ", -1, 10, 14, 30, 8
    COMBOBOX IDC_COMBO_METHOD, 45, 12, 80, 60, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    LTEXT "Phím chuyển", -1, 10, 30, 42, 8
    AUTOCHECKBOX "Ctrl", IDC_CHECK_HOTKEY_CTRL, 55, 30, 26, 10
    AUTOCHECKBOX "Shift", IDC_CHECK_HOTKEY_SHIFT, 82, 30, 32, 10
    AUTOCHECKBOX "Alt", IDC_CHECK_HOTKEY_ALT, 115, 30, 22, 10
    EDITTEXT IDC_EDIT_HOTKEY, 140, 28, 35, 12, ES_AUTOHSCROLL | ES_UPPERCASE
    AUTOCHECKBOX "Win", IDC_CHECK_HOTKEY_WIN, 178, 30, 28, 10

    // Right buttons
    DEFPUSHBUTTON "Lưu", IDC_BTN_OK, 245, 10, 50, 16
    PUSHBUTTON "Huỷ", IDC_BTN_CANCEL, 245, 30, 50, 16

    // Options - 2 columns only
    AUTOCHECKBOX "Bỏ dấu kiểu mới", IDC_CHECK_MODERN, 10, 55, 70, 10
    AUTOCHECKBOX "Bỏ dấu tự do", IDC_CHECK_FREETONE, 10, 68, 60, 10
    AUTOCHECKBOX "f,j,w,z phụ âm", IDC_CHECK_FOREIGN, 10, 81, 65, 10
    AUTOCHECKBOX "Tự động viết hoa", IDC_CHECK_AUTOCAP, 10, 94, 70, 10
    AUTOCHECKBOX "Chế độ clipboard", IDC_CHECK_CLIPBOARD, 10, 107, 70, 10
    AUTOCHECKBOX "Cho phép gõ tắt", IDC_CHECK_SHORTCUT_ENABLED, 10, 120, 68, 10
    AUTOCHECKBOX "Khởi động cùng Windows", IDC_CHECK_AUTOSTART, 10, 133, 95, 10

    AUTOCHECKBOX "Tự động khôi phục tiếng Anh", IDC_CHECK_AUTORESTORE, 155, 55, 110, 10
    AUTOCHECKBOX "ESC khôi phục ASCII", IDC_CHECK_ESCRESTORE, 155, 68, 85, 10
    AUTOCHECKBOX "Dấu ngoặc làm phím tắt", IDC_CHECK_BRACKET, 155, 81, 95, 10
    AUTOCHECKBOX "Bỏ qua phím tắt w", IDC_CHECK_SKIPW, 155, 94, 80, 10
    AUTOCHECKBOX "Nhớ theo ứng dụng", IDC_CHECK_SMARTSWITCH, 155, 107, 80, 10
    AUTOCHECKBOX "Chế độ chậm (terminal)", IDC_CHECK_SLOWMODE, 155, 120, 95, 10
    AUTOCHECKBOX "Ẩn khi khởi động", IDC_CHECK_SILENT, 155, 133, 70, 10

    // Bottom buttons row
    PUSHBUTTON "Bảng gõ tắt...", IDC_BTN_SHORTCUTS, 10, 155, 55, 15
    PUSHBUTTON "Loại trừ...", IDC_BTN_EXCLUDE, 70, 155, 45, 15
    PUSHBUTTON "Chuyển mã...", IDC_BTN_CONVERTER, 120, 155, 50, 15
END

// =============================================================================
// Shortcuts Dialog
