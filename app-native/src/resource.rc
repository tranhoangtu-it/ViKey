    PUSHBUTTON "Huỷ", IDCANCEL, 190, 180, 50, 14
END

// Converter Dialog (Feature 6)
IDD_CONVERTER DIALOGEX 0, 0, 320, 220
STYLE DS_SETFONT | DS_MODALFRAME | DS_FIXEDSYS | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "Chuyển mã tiếng Việt"
FONT 9, "Segoe UI", 400, 0, 0x1
BEGIN
    LTEXT "Từ:", -1, 7, 9, 20, 10
    COMBOBOX IDC_COMBO_FROM, 27, 7, 100, 100, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    LTEXT "Sang:", -1, 140, 9, 30, 10
    COMBOBOX IDC_COMBO_TO, 170, 7, 100, 100, CBS_DROPDOWNLIST | WS_VSCROLL | WS_TABSTOP
    PUSHBUTTON "<->", IDC_BTN_SWAP, 280, 6, 30, 14

    LTEXT "Văn bản nguồn:", -1, 7, 28, 60, 10
    EDITTEXT IDC_EDIT_SOURCE, 7, 40, 305, 60, ES_MULTILINE | ES_AUTOVSCROLL | WS_VSCROLL

    PUSHBUTTON "Chuyển đổi", IDC_BTN_CONVERT, 130, 105, 60, 16

    LTEXT "Kết quả:", -1, 7, 128, 40, 10
    EDITTEXT IDC_EDIT_TARGET, 7, 140, 305, 50, ES_MULTILINE | ES_AUTOVSCROLL | ES_READONLY | WS_VSCROLL

    PUSHBUTTON "Sao chép", IDC_BTN_COPY, 200, 198, 50, 14
    PUSHBUTTON "Đóng", IDCANCEL, 260, 198, 50, 14
END

