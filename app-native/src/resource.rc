    PUSHBUTTON "+", IDC_BTN_ADD_EXCLUDED, 195, 20, 20, 16
    PUSHBUTTON "-", IDC_BTN_REMOVE_EXCLUDED, 195, 40, 20, 16
    PUSHBUTTON "Lấy app hiện tại", IDC_BTN_GET_CURRENT, 195, 65, 48, 20, BS_MULTILINE
