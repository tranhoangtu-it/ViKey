    LTEXT "Thay:", -1, 82, 112, 20, 8
    EDITTEXT IDC_EDIT_VALUE, 104, 110, 75, 13, ES_AUTOHSCROLL
    PUSHBUTTON "+", IDC_BTN_ADD, 183, 109, 16, 15
    PUSHBUTTON "-", IDC_BTN_REMOVE, 200, 109, 16, 15

    PUSHBUTTON "Xuất...", IDC_BTN_EXPORT_SC, 4, 135, 38, 15
    PUSHBUTTON "Nhập...", IDC_BTN_IMPORT_SC, 45, 135, 38, 15
    DEFPUSHBUTTON "Lưu", IDC_BTN_OK, 132, 135, 40, 15
    PUSHBUTTON "Huỷ", IDC_BTN_CANCEL, 176, 135, 40, 15
END

